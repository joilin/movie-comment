/* pages/home/home.wxss */
page{
    width: 100%;
    height: 100%;
}
.noCommenttip{  
    width: 100%;
    height: 100rpx;
    font-size: 40rpx;
    line-height: 64rpx;
    text-align: center;
}
.movie-card{
    display: flex;
    flex-direction:column;
    margin-top:40rpx;
    margin-left:70rpx;
    margin-right:70rpx;
    align-items:center;
    width: 81%;
    height: 75%;

}
.movie-image{
    width: 100%;
    height: 90%;
   
}
.movie-name{
    display: block;
    margin-top:30rpx;
    text-align: center;   
    font-size:40rpx;
    line-height: 56rpx;
    color:rgba(29,29,38,0.8);
}
.comment-card{
    margin-top:20rpx;
    display: flex;
    justify-content:center;
    align-items: center;

    font-size:28rpx;
    line-height: 40rpx;
    color:rgba(29,29,38,0.8);
}
.comment-avatar{
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.comment-usename{
    margin-left:20rpx;
}

.btn-area{
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    font-size: 30rpx;
    line-height: 42rpx;
    color: rgba(0, 0, 0, 0.5);
    background-color:white;

}

.navigator-btn{
    display: flex;
    justify-content:center;
    align-items: center;
}

.navigator-image{
    width: 60rpx;
    height: 60rpx; 
}

.navigator-text{
    margin-left:20rpx;
}
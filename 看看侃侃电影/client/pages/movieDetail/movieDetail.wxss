/* pages/movieDetail/movieDetail.wxss */
page{
    width: 100%;
    height: 100%;
}

.movie-image{
    position: absolute;
    top: 30rpx;
    left: 250rpx;
    width: 40%;
    height: 430rpx;
}
.movieDetail{
    display: flex;
    flex-direction: column;
    justify-content:space-between;
    margin: 80rpx 40rpx 100rpx;
    width: 89%;
    height: 89%;
}

.description-card{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background-color:white;
}

.movie-info{
    display: flex;
    flex-direction: column;    
    margin: 400rpx 80rpx 20rpx;
    width: 510rpx;
    height: 50%;
}
.movie-name{
    text-align: center; 
    font-weight: bold; 
    font-size: 40rpx;
    line-height: 56rpx;
    color:rgba(29,29,38,0.8);
}
.movie-description{
    margin-top:20rpx;   
    height: 85%;
    font-size:30rpx;
    line-height:42rpx;
    color:rgba(29,29,38,0.8);  
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.btn-area{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 42rpx;
    color: rgba(0, 0, 0, 0.5);
}

.navigator-btn{
    display: flex;
    justify-content:center;
    align-items: center;
    padding-left: 40rpx;
    padding-right: 40rpx;
    border-style:groove;
    border-width: thin;
    border-color: beige;
    border-radius: 5%;
}

.navigator-image{
    width: 60rpx;
    height: 60rpx; 
}

.navigator-text{
    margin-left:10rpx;
}
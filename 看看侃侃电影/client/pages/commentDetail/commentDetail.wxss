/* pages/commentDetail/commentDetail.wxss */
page{
    width: 100%;
    height: 100%;
}

.movie-image{
    position: absolute;
    top: 30rpx;
    left: 250rpx;
    width: 40%;
    height: 350rpx;
}

.commentDetail{
    display: flex;
    flex-direction: column;
    justify-content:space-between;
    margin: 80rpx 40rpx 100rpx;
    width: 89%;
    height: 89%;

}
.comment-card{
 display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background-color:white;
}
.comment-info{
    margin-top: 320rpx;
    width: 100%;
    height: 58%;
}
.movie-name{
    text-align: center; 
    font-weight: bold; 
    font-size: 40rpx;
    line-height: 56rpx;
    color:rgba(29,29,38,0.8);
}
.comment-user{
    margin-top: 20rpx;
    padding-left: 80rpx;
    display: flex;
    align-items: center;
    font-size:28rpx;
    line-height: 40rpx;
    color:rgba(29,29,38,0.8);
}
.comment-avatar{
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.comment-usename{
    margin-left:20rpx;
}
.comment-content{
    margin-top: 20rpx; 
    padding-left: 100rpx;
    padding-right: 100rpx;
    width: 70%;
    height: 68%;
    font-size:30rpx;
    line-height:42rpx;
    color:rgba(29,29,38,0.8);
}
.txt-content{
    width: 100%;
    height: 100%;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.audio-content{
    display: flex;
    flex-direction: row;
    margin-left: 40rpx; 
    justify-content:flex-start;
    align-items:center;
    height: 100rpx;
    background: #FFFFFF;
    box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
}
.play-icon{
    flex-shrink: 0;
    width: 60rpx;
    height: 60rpx;
}
.btn-area{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 42rpx;
    color: rgba(0, 0, 0, 0.5);
}
.navigator-btn{
    display: flex;
    justify-content:center;
    align-items: center;
    padding-left: 40rpx;
    padding-right: 40rpx;
    border-style:groove;
    border-width: thin;
    border-color: beige;
    border-radius: 5%;
}
.navigator-image{
    width: 60rpx;
    height: 60rpx; 
}
.navigator-text{
    margin-left:10rpx;
}
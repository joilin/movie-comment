/* pages/commentList/commentList.wxss */
page{
    width: 100%;
    height: 100%;
}
.noCommenttip{
    position: absolute;
    top: 230rpx;
    width: 100%;
    height: 100rpx;
    font-size: 40rpx;
    line-height: 64rpx;
    text-align: center;
}
.comment-list {
    position: absolute;
    top: 30rpx;
    width: 100%;
    height: 90%;
}

.comment-card {
    display: flex;
    flex-direction: column;
    justify-content:flex-start;

    height: 300rpx;
    background: #FFFFFF;
    box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.comment-user{
    display: flex;
    margin-top:20rpx;
    margin-left: 40rpx;
    align-items: center;
    font-size: 35rpx;
    line-height: 49rpx;
    color:rgba(29,29,38,0.8);
}
.comment-avatar{
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.comment-usename{
    margin-left:20rpx;
}

.comment-content{
    padding-left: 80rpx; 
    padding-right: 80rpx;
   margin-top: 20rpx;
}
.txt-content{
    font-size:30rpx;
    line-height: 42rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}

.audio-content{
    display: flex;
    flex-direction: row;
    margin-left: 40rpx; 
    justify-content:flex-start;
    align-items:center;
    height: 100rpx;
    background: #FFFFFF;
    box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
}
.play-icon{
    flex-shrink: 0;
    width: 60rpx;
    height: 60rpx;
}

.btn-area{
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    font-size: 30rpx;
    line-height: 42rpx;
    color: rgba(0, 0, 0, 0.5);
    background: #FFFFFF;
}

.navigator-btn{
    display: flex;
    justify-content:center;
    align-items: center;
}